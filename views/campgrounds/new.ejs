<%- include("../partials/header.ejs"); -%> 

<div class="container" style="width: 40%;">
        <h1 class="text-center" >Create a New Campground</h1>

        <form  method="POST" action="/campgrounds">
            <div class="form-group">
                <label for="name">From <strong><%= currentUser.username %></strong> </label>
            </div>
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" placeholder="name" id="name">
            </div>  
            <div class="form-group">
                <label for="image">Image URL</label>
                <input class="form-control" type="text" name="image" placeholder="image url" id="image">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="description" placeholder="Type something about this Camp." id="description">
            </div>
            
            <button class="btn btn-md btn-outline-primary btn-block" type="submit">Submit it!</button>
        </form>

        <a class="btn btn-md btn-outline-dark btn-block my-2" href="/campgrounds">Go Back!</a>
</div>
<%- include("../partials/footer.ejs"); -%> 