<%- include("../partials/header.ejs"); -%> 

<div class="container" style="width: 40%;">
        <h1 class="text-center" >Edit Comment</h1>

        <form  method="POST" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT">
            
            <div class="form-group">
                <label for="text">Text</label>
                <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" id="text">
            </div>
            <button class="btn btn-md btn-outline-primary btn-block" type="submit">Submit it!</button>
        </form>

        <a class="btn btn-md btn-outline-dark btn-block my-2" href="/campgrounds/<%= campground_id %>">Go Back!</a>
</div>
